{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "unicorn",
    "typescript",
    "oxc",
    "import",
    "vitest",
    "react",
    "react-perf",
    "eslint",
    "jsx-a11y",
    "promise",
    "node"
  ],
  "rules": {
    "unicorn/filename-case": [
      "error",
      {
        "case": "kebabCase",
        "ignore": "routeTree.gen.ts"
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.stories.tsx"],
      "rules": {
        "jsx-a11y/anchor-is-valid": "off"
      }
    }
  ]
}
