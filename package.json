{
  "name": "grunnmuren",
  "description": "Monorepo for Grunnmuren, OBOS' design system",
  "private": true,
  "repository": {
    "url": "https://github.com/code-obos/grunnmuren"
  },
  "scripts": {
    "build": "pnpm --filter './packages/*' build",
    "dev": "storybook dev -p 6006 --ci",
    "ci:publish": "pnpm build && changeset publish",
    "ci:version": "changeset version",
    "lint": "pnpm lint:js && pnpm lint:format",
    "lint:format": "prettier --list-different .",
    "lint:js": "eslint . --ext \"js,cjs,mjs,tsx,ts\" --max-warnings 0 --ignore-path .gitignore"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "storybook": "7.3.2",
    "@types/react": "18.2.21",
    "@storybook/addon-controls": "7.3.2",
    "@storybook/addon-docs": "7.3.2",
    "@storybook/addon-styling": "1.3.6",
    "@storybook/builder-vite": "7.3.2",
    "@storybook/react": "7.3.2",
    "@storybook/react-vite": "7.3.2",
    "eslint-plugin-storybook": "^0.6.13",
    "@changesets/cli": "2.26.2",
    "@typescript-eslint/eslint-plugin": "6.4.1",
    "@typescript-eslint/parser": "6.4.1",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "prettier": "3.0.2",
    "prettier-plugin-tailwindcss": "0.5.3",
    "typescript": "5.1.6"
  }
}
