{
  "name": "grunnmuren",
  "private": true,
  "description": "Monorepo for Grunnmuren, OBOS' design system",
  "repository": {
    "url": "https://github.com/code-obos/grunnmuren"
  },
  "scripts": {
    "build": "pnpm --filter './packages/**' build",
    "build:netlify": "pnpm --filter @obosbbl/grunnmuren-icons-react build && pnpm build:storybook",
    "build:storybook": "storybook build",
    "ci:publish": "pnpm build && changeset publish",
    "ci:version": "changeset version && pnpm install --lockfile-only",
    "dev": "storybook dev -p 6006 --ci",
    "lint": "pnpm lint:biome && pnpm lint:js && pnpm lint:format",
    "lint:biome": "pnpm biome check .",
    "lint:format": "prettier --list-different .",
    "lint:js": "eslint . --ext \"js,cjs,mjs,tsx,ts\" --max-warnings 0 --ignore-path .gitignore",
    "serve-storybook": "http-server storybook-static -p 6006 --silent",
    "test": "test-storybook"
  },
  "dependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "2.27.10",
    "@obosbbl/grunnmuren-tailwind": "workspace:*",
    "@react-aria/optimize-locales-plugin": "1.1.3",
    "@storybook/addon-actions": "8.4.5",
    "@storybook/addon-controls": "8.4.5",
    "@storybook/addon-docs": "8.4.5",
    "@storybook/addon-interactions": "8.4.5",
    "@storybook/builder-vite": "8.4.5",
    "@storybook/react": "8.4.5",
    "@storybook/react-vite": "8.4.5",
    "@storybook/test": "8.4.5",
    "@storybook/test-runner": "0.19.1",
    "@types/bun": "1.1.13",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "7.10.0",
    "@typescript-eslint/parser": "7.10.0",
    "autoprefixer": "10.4.20",
    "bunchee": "5.6.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-storybook": "0.8.0",
    "fontaine": "0.5.0",
    "http-server": "14.1.1",
    "playwright": "1.49.0",
    "postcss": "8.4.49",
    "prettier": "3.2.5",
    "prettier-plugin-packagejson": "2.5.0",
    "prettier-plugin-tailwindcss": "0.5.14",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "storybook": "8.4.5",
    "tailwindcss": "3.4.15",
    "typescript": "5.6.3"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=22.11"
  }
}
