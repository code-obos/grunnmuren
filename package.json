{
  "name": "grunnmuren",
  "private": true,
  "description": "Monorepo for Grunnmuren, OBOS' design system",
  "repository": {
    "url": "https://github.com/code-obos/grunnmuren"
  },
  "scripts": {
    "build": "pnpm --filter './packages/**' build",
    "build:netlify": "pnpm --filter @obosbbl/grunnmuren-icons-react build && pnpm build:storybook",
    "build:storybook": "storybook build",
    "ci:publish": "pnpm build && changeset publish",
    "ci:version": "changeset version && pnpm install --lockfile-only",
    "dev": "storybook dev -p 6006 --ci",
    "lint": "pnpm lint:format && pnpm lint:js",
    "lint:ci": "pnpm biome ci .",
    "lint:format": "prettier --write .",
    "lint:js": "pnpm biome check ."
  },
  "dependencies": {
    "@biomejs/biome": "1.8.3",
    "@changesets/cli": "2.27.7",
    "@obosbbl/grunnmuren-tailwind": "workspace:*",
    "@react-aria/optimize-locales-plugin": "1.1.1",
    "@storybook/addon-actions": "8.1.11",
    "@storybook/addon-controls": "8.1.11",
    "@storybook/addon-docs": "8.1.11",
    "@storybook/builder-vite": "8.1.11",
    "@storybook/react": "8.1.11",
    "@storybook/react-vite": "8.1.11",
    "@types/bun": "1.1.3",
    "@types/react": "18.3.3",
    "autoprefixer": "10.4.19",
    "bunchee": "5.2.2",
    "fontaine": "0.5.0",
    "postcss": "8.4.39",
    "prettier": "3.2.5",
    "prettier-plugin-packagejson": "2.5.0",
    "prettier-plugin-tailwindcss": "0.5.14",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "storybook": "8.1.11",
    "tailwindcss": "3.4.4",
    "typescript": "5.5.3"
  },
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": ">=20"
  }
}
