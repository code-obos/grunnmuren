{
  "$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
  "files": {
    "includes": [
      "**",
      "!**/.nitro",
      "!**/.tanstack",
      "!**/node_modules",
      "!**/storybook-static",
      "!**/dist",
      "!**/.next",
      "!**/.output",
      "!**/vite.config.timestamp_*",
      "!**/apps/docs/public/storybook",
      "!**/routeTree.gen.ts",
      "!**/packages/icons-react/src",
      "!**/apps/docs/sanity.types.ts",
      "!**/packages/tailwind/font.css"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useFilenamingConvention": {
          "level": "error",
          "options": {
            "filenameCases": ["kebab-case"]
          }
        }
      },
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "fix": "safe",
          "options": {
            "functions": ["cx", "cva"]
          }
        }
      },
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "overrides": [
    {
      "includes": ["**/.vscode/**"],
      "json": {
        "parser": {
          "allowComments": true
        }
      }
    },
    {
      "includes": ["**/package.json"],
      "formatter": {
        "lineWidth": 1
      }
    },
    {
      "includes": ["**/$*.tsx"],
      "linter": {
        "rules": {
          "style": {
            "useFilenamingConvention": "off"
          }
        }
      }
    }
  ]
}
